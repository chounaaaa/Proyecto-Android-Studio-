<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InicioActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="FormaRedondeada" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="Theme.InicioActivity" parent="Base.Theme.InicioActivity" />

    <!-- Estilo para MenuPrincipal que FUERZA la barra de estado a ser negra -->
    <style name="Theme.InicioActivity.MenuPrincipal" parent="Theme.InicioActivity">
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Esto es clave: le dice a los iconos (hora, wifi) que sean blancos -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Estilo para el RatingBar -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#EEDA00</item> <!-- O un color amarillo que prefieras -->
    </style>
</resources>
