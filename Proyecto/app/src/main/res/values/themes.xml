<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. TEMA BASE DE LA APLICACIÓN -->
    <!-- Aquí se define el comportamiento principal para todas las pantallas -->
    <style name="Base.Theme.InicioActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Establece el color de la barra de estado a negro en toda la app -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Asegura que los iconos de la barra (hora, wifi) sean blancos para que se vean sobre el fondo negro -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Este es el tema final que hereda del tema base. No necesita cambios. -->
    <style name="Theme.InicioActivity" parent="Base.Theme.InicioActivity" />


    <!-- 2. ESTILOS ADICIONALES PARA COMPONENTES ESPECÍFICOS -->

    <!-- Estilo para dar forma redondeada a vistas, como el botón de login -->
    <style name="FormaRedondeada" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <!-- Estilo personalizado para el RatingBar (las estrellas de calificación) -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <!-- Color de las estrellas no seleccionadas (gris) -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <!-- Color de las estrellas seleccionadas (amarillo) -->
        <item name="colorControlActivated">#EEDA00</item>
    </style>

</resources>
